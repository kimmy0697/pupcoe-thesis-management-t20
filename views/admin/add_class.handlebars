<div class="container-fluid" style="padding: 20px 20px">
  <div class="admin_faculty_header">
    <h3 style="display: inline-block">ADD CLASS</h3>
    <a href="/admin/classes" style="display:inline-block; float:right"><button class="btn btn-sm ml-auto">&laquo;&ensp;Go back</button></a>
    <hr>
  </div>
  <div class="admin_add_faculty_form">
    <form method="POST" action="">
      <div class="row">
        <div class="form-group col-md-8">
          <label>Batch</label>
          <select name="batch" class="form-control">
            <option value="">2012</option>
            <option value="">2013</option>
            <option value="">2014</option>
            <option value="">2015</option>
            <option value="">2016</option>
            <option value="">2017</option>
            <option value="">2018</option>
            <option value="">2019</option>
          </select>
        </div>
        <div class="form-group col-md-8">
          <label>Year Level</label>
          <select name="year_level" class="form-control">
            <option value="">1st Year</option>
            <option value="">2nd Year</option>
            <option value="">3rd Year</option>
            <option value="">4th Year</option>
            <option value="">5th Year</option>
          </select>
        </div>
        <div class="form-group col-md-8">
          <label>Section</label>
          <select name="section" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="form-group col-md-8">
          <label><h4>Adviser</h4></label>
          {{#each faculties}}
          <select name="user_id" class="form-control">
            <option value="{{this.id}}">{{this.fname}} {{this.lname}}</option>
          </select>
          {{/each}}
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-8">
          <input class="btn btn-md" type="submit" name="save" value="Add Faculty Member"> 
        </div>
      </div>
    </form>
  </div>
</div>